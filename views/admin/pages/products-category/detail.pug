extends ../../layouts/default.pug

block main 
        if (record.title)
            h1(class="mb-4")= record.title

        if (record.parent_id)
            div(class="mb-4") Danh mục cha: <b>#{record.parent_id}</b>

        if (record.description)
            div(class="mb-4") Mô tả: <p>#{record.description}</p>

        if (record.thumbnail)
            div(class="mb-4")
                img(src=record.thumbnail style="width: 100px")

        if (record.status)
            div(class="mb-4")
                span Trang thái: 
                if (record.status == "active")
                    span(class="text-success") Hoạt động
                else
                    span(class="text-danger") Không hoạt động
        if (record.position)
            div(class="mb-4") Vị trí: <b>#{record.position}</b>

        a(href=`${prefixAdmin}/products-category/edit/${record.id}` class="btn btn-warning") Sửa sản phẩm